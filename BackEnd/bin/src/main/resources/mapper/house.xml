<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.board.model.mapper.HouseMapper">
    <select id="selectHouseList" parameterType="SearchHouse" resultType="House">
        select *
        from houseinfo as hi left join housedeal as hd
        on hi.aptCode = hd.aptCode
        where dongCode
        in
        select dongCode
        from dongCode
        where sidoName = #{} and gugunName = #{} and dongName = #{}
        and apartmentName like #{}
        and dealYear like #{} and dealMonth like #{}
    </select>
</mapper>

