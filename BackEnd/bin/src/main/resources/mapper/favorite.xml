<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.favorite.model.mapper.FavoriteMapper">
    <insert id="insert" parameterType="Favorite">
        INSERT INTO favorite(user_id, sidoName, gugunName, dongName)
        VALUES(#{user_id}, #{sidoName}, #{gugunName}, #{dongName})
    </insert>

    <select id="selectAll" parameterType="String">
        SELECT user_id, sidoName, gugunName, dongName
        FROM favorite
        WHERE user_id = #{user_id}
    </select>

    <delete id="delete" parameterType="Favorite">
        DELETE FROM favorite
        WHERE user_id = #{user_id}
            AND sidoName = #{sidoName}
            AND gugunName = #{gugunName}
            AND dongName = #{dongName}
    </delete>
</mapper>

